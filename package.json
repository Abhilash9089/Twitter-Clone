{
  "name": "twitter-clone-pern",
  "version": "1.0.0",
  "description": "Twitter Clone built with PERN stack (PostgreSQL, Express, React, Node.js)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "setup": "node setup.js",
    "init-db": "node init-db.js",
    "quick-start": "node start.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sequelize": "^6.32.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "twitter",
    "clone",
    "pern",
    "social",
    "media",
    "postgresql"
  ],
  "author": "Your Name",
  "license": "MIT"
}
